@{
    ViewData["Title"] = "Home Page";
}

<div class="alert alert-warning alert-dismissible hidden" id="errorAlert" role="alert">
    <span id="serverInfoMessage"></span>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="app d-flex justify-content-between bg-white h-100">
    <div class="left-sidebar">
        <div class="header d-flex justify-content-between align-items-center">
            <h5>Chat Rooms</h5>
            <a href="#" id="create-room" data-toggle="modal" data-target="#create-room-modal"><i class="fas fa-plus"></i></a>
        </div>
        <div class="rooms">
            <ul id="room-list">
            </ul>
        </div>
        <div class="user d-flex align-items-center">
            <img id="userAvatar" class="user-avatar" src="" />
            <a id="userName" href="#" class="user-name"></a>
            <div class="user-signout ml-auto">
                <form id="logoutForm" class="navbar-right" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <a href="javascript:document.getElementById('logoutForm').submit()" title="Sign Out"><i class="fas fa-sign-out-alt"></i></a>
                </form>
            </div>
        </div>
    </div>
    <div id="pleaseJoinTxt" class="main-content">
        <span class="m-auto">
            Please select room to join!
        </span>
    </div>
    <div id="lobbyMain" class="main-content">
        <div class="chat-header d-flex justify-content-between align-items-center">
            <h5 id="joinedRoom">Lobby</h5>
            <button data-toggle="modal" data-target="#remove-room-modal" class="btnDeleteRoom">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="chat-body better-scrollbar">
            <ul id="chatMessages">
                <li>
                    <div class="chat-message d-flex">
                        <div class="left-side">
                            <img src="@Url.Content("~/images/icons/avatar1.png")" class="message-avatar" />
                        </div>
                        <div class="message-content d-flex flex-column">
                            <div class="d-flex justify-content-between">
                                <span class="author"></span>
                                <span class="timestamp">
                                    <i class="glyphicon glyphicon-time"></i>
                                    <span></span>
                                </span>
                            </div>
                            <span class="content"></span>
                        </div>
                    </div>

                </li>
            </ul>
        </div>
        <div class="chat-input d-flex justify-content-between align-items-center">
            <input id="chat-message" type="text" value="" placeholder="What's on your mind?" />
            <div class="actions d-flex align-items-center">
                <label for="btnUpload" class="custom-file-upload">
                    <i class="far fa-image"></i>
                </label>
                <input type="file" id="btnUpload" accept="image/*" name="files" data-bind="event: {change: uploadFiles}" />
                <a id="emojibtn" href="#">
                    <i class="far fa-smile"></i>
                </a>
                <i class="fas fa-paper-plane" id="btn-send-message" title="Send"></i>
            </div>
            <div class="emoticon-container hidden" id="emojis-container">
                <a href="#">
                    <input type="hidden" value=":)" />
                    <img src="@Url.Content("~/images/emojis/emoji1.png")" />
                </a>
                <a href="#">
                    <input type="hidden" value=":P" />
                    <img src="@Url.Content("~/images/emojis/emoji2.png")" />
                </a>
                <a href="#">
                    <input type="hidden" value=":O" />
                    <img src="@Url.Content("~/images/emojis/emoji3.png")" />
                </a>
                <a href="#">
                    <input type="hidden" value=":-)" />
                    <img src="@Url.Content("~/images/emojis/emoji4.png")" />
                </a>
                <a href="#">
                    <input type="hidden" value="B|" />
                    <img src="@Url.Content("~/images/emojis/emoji5.png")" />
                </a>
                <a href="#">
                    <input type="hidden" value=":D" />
                    <img src="@Url.Content("~/images/emojis/emoji6.png")" />
                </a>
                <a href="#">
                    <input type="hidden" value="<3" />
                    <img src="@Url.Content("~/images/emojis/emoji7.png")" />
                </a>
            </div>
        </div>
    </div>
    <div class="right-sidebar">
        <div class="header">
            <h5>Who's Here <span id="chatUsersCount">0</span></h5>
        </div>
        <div class="chat-users better-scrollbar">
            <ul id="user-list">
                @*<li>
                    <div class="user-inner d-flex align-items-center">
                        <div class="left-side">
                            <img src="~/Content/icons/avatar1.png" class="user-avatar" />
                        </div>
                        <div class="right-side d-flex flex-column">
                            <input type="hidden" class="username" data-bind="value:$data.userName" />
                            <span class="author" data-bind="text: $data.displayName"></span>
                            <small data-bind="text: $data.device"></small>
                        </div>
                    </div>
                </li>*@
            </ul>
        </div>
        <div class="search-user">
            <input id="searchUser" type="text" class="" placeholder="Search someone..." />
        </div>
    </div>
</div>

<div class="modal" id="create-room-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Room</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="text" class="form-control" id="roomName" placeholder="Room name">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="createRoom" type="button" class="btn btn-primary" data-dismiss="modal">Create</button>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="remove-room-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Room</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this Chat Room?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="deleteRoom" type="button" class="btn btn-danger" data-dismiss="modal">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/MyChat.js" asp-append-version="true"></script>
    <script src="~/js/MyScript.js" asp-append-version="true"></script>
}